<% book_comments.each do |book_comment| %>
                <% unless book_comment.id.nil? %>
				<p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
				<%= book_comment.comment %>
					<% if book_comment.user == current_user%>
                          <%= link_to "Destroy", book_comment_path(book_comment, book_comment.book), method: :delete, remote: true, class: "btn btn-danger" %>
                    <% end %></p>
                    <% end %>
				<% end %>