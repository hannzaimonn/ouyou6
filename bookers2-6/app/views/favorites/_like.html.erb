<div class="favorite-link" id="favorite-link-<%= book.id %>">
                        <% if book.favorited_by?(current_user) %>
                         <%= link_to unlike_path(book.id), method: :delete, remote: true do %>
                         <span class="glyphicon glyphicon-heart" aria-hidden="true" ><%= book.favorites.count %></span>
                         <% end %>
                         <% else %>
                         <%= link_to like_path(book.id), method: :post, remote: true do %>
                         <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"><%= book.favorites.count %></span>
                         <% end %>
                         <% end %>